  <!-- FavIcon -->
  <link rel="shortcut icon" href="/assets/logo.png" type="image/png">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">


  <script src='https://cdn.tailwindcss.com'></script>

  <!-- JS -->
