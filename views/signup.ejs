  <main class=" border w-[330px] flex flex-col items-center py-[40px] gap-10 shadow-2xl rounded-2xl">
    <div>
      <a href="/" class="text-3xl">
        <i class="ri-blaze-line text-4xl"></i>
        OurPortfolio
      </a>
    </div>
    <form action="post" class="flex flex-col items-center gap-4">
      <label for="username">
        Username
        <br>
        <input type="text" name="username" class="border border-black p-1 rounded-md">
      </label>

      <label for="password">
        Password
        <br>
        <input type="password" name="password" class="border border-black p-1 rounded-md">
      </label>
      <label for="password">
        Confirm Password <span class="text-red-900">*</span>
        <br>
        <input type="password" name="password" class="border border-black p-1 rounded-md">
      </label>
      <button class="bg-black text-white px-5 py-2 rounded-full hover:bg-slate-950 group">
        SignUp
        <i class="ri-arrow-right-line text-white group-hover:translate-x-3 group-hover:text-red-900"></i>
      </button>
      <div class="flex flex-col items-center">
        <p>
          Already have an account

        </p>
        <a href="" class="underline text-slate-600">Login</a>
      </div>
    </form>
  </main>

  <footer>

  </footer>

